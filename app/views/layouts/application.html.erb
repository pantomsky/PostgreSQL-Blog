<!DOCTYPE html>
<html>
  <head>
    <title>Postgresblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="<%= root_path %>">Postgresblog</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item <% if params[:controller] == "home" && params[:action] == "index" %> active <% end %>">
            <a class="nav-link" href="<%= root_path %>">Strona główna<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item <% if params[:controller] == "home" && params[:action] == "about" %> active <% end %>">
            <a class="nav-link" href="<%= about_path %>">O stronie</a>
          </li>
          <li class="nav-item <% if params[:controller] == "home" && params[:action] == "contact" %> active <% end %>">
            <a class="nav-link" href="<%= contact_path %>">Kontakt</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="mt-4 jumbotron container">
      <%= yield %>
    </div>

    <footer class="container">Stopka!</footer>
  </body>
</html>
